            <div class="row">

                <table id="example" class="table table-striped responsive-utilities jambo_table">
                    <thead>
                        <tr class="headings">
                            <th>Date</th>
                            <th>Chauffeur</th>
                            <th>Depot</th>
                            <th>Vehicule</th>
                            <th>Num. SP</th>
                            <th>Num. emb</th>
                            <th>superviseur</th>
                            <th>Nbre palette</th>
                            <th>Duree</th>
                            <th></th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="even pointer">

                                <td>@Html.DisplayFor(modelItem => item.date_loading)</td>
                                <td>@Html.DisplayFor(modelItem => item.id_chauffeur)</td>
                                <td>@Html.DisplayFor(modelItem => item.id_depot)</td>
                                <td>@Html.DisplayFor(modelItem => item.id_vehicule)</td>
                                <td class="alert alert-success ">@Html.DisplayFor(modelItem => item.numero_sp)</td>
                                <td class="alert alert-info ">@Html.DisplayFor(modelItem => item.numero_emb)</td>
                                <td>@Html.DisplayFor(modelItem => item.id_superviseur)</td>
                                <td>@Html.DisplayFor(modelItem => item.nbre_palette)</td>
                                <td>00:30:12</td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.id }) |
                                    @Html.ActionLink("More", "More", new { id = item.id })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
            </div>
        </div>
    </div>
