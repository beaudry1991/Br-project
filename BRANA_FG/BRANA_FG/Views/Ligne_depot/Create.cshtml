                            var id = ViewBag.listdep[a].id;
                            var nom = ViewBag.listdep[a].nom.ToString();
                            if (ViewBag.tmpdepot == id)
                            {
                                <option value="@id" selected>@nom</option>
                            }
                            else
                            {
                                <option value="@id">@nom</option>
                            }
                        }

