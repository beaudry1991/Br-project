                <div class="col-md-3 col-sm-9 col-xs-12">
                    <select class="select2_single form-control" tabindex="-1" name="id_ligne_production" id="id_ligne_production">

                        @for (var a = 0; a < (int)ViewBag.sizeLP; a++)
                        {

                            var id = ViewBag.ligneProduction[a].id;
                            var nom = ViewBag.ligneProduction[a].nom.ToString();
                            if (ViewBag.tmpLigneP == id)
                            {
                                <option value="@id" selected>@nom</option>
                            }
